@font-face
  font-family 'Inter-Bold'
  src url('../fonts/InterTight-Bold.woff'), url('../fonts/InterTight-Bold.woff2')
  font-display swap
@font-face
  font-family 'Inter-ExtraLight'
  src url('../fonts/InterTight-ExtraLight.woff'), url('../fonts/InterTight-ExtraLight.woff2')
  font-display swap
@font-face
  font-family 'Inter-Medium'
  src url('../fonts/InterTight-Medium.woff'), url('../fonts/InterTight-Medium.woff2')
  font-display swap
@font-face
  font-family 'Inter-Regular'
  src url('../fonts/InterTight-Regular.woff'), url('../fonts/InterTight-Regular.woff2')
  font-display swap
@font-face
  font-family 'Inter-SemiBold'
  src url('../fonts/InterTight-SemiBold.woff'), url('../fonts/InterTight-SemiBold.woff2')
  font-display swap

@font-face
  font-family 'OrelegaOne-Regular'
  src url('../fonts/OrelegaOne-Regular.woff'), url('../fonts/OrelegaOne-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Inter-Regular'
  font-weight 400
  line-height 120%
  color $color-white

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px

.out-wrapper
  max-width 370px
  margin 0 auto
  width 100%
  border-radius: 25px
  +above($breakpoints.sm)
    max-width 830px
    border-radius: 30px
  +above($breakpoints.md)
    max-width 1080px
    border-radius: 40px
  +above($breakpoints.xxl)
    max-width 1440px
    border-radius: 60px
