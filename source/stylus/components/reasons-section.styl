.reasons-section
  // background-image: url('../images/reasons-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color $color-brown

  &__container
    position relative
    z-index 1
    color: $color-beige
    letter-spacing: -0.5px
    padding 20px 0 0
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 80px 0
    +above($breakpoints.xxl)
      padding 122px 0

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 20px 0 30px
    +above($breakpoints.md)
      padding 25px 0 50px
    +above($breakpoints.xxl)
      padding 30px 0 70px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 30px 10px
    +above($breakpoints.md)
      gap: 40px 20px
    +above($breakpoints.xxl)
      gap: 60px 20px

  &__card
    width 280px !important
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      width 235px !important
    +above($breakpoints.md)
      width: 308px !important;
    +above($breakpoints.xxl)
      width 380px !important
      height: 312px

  &__card-img-wrapper
    position relative
    overflow hidden
    border-radius: 8px
    +above($breakpoints.sm)
      border-radius: 10px
    +above($breakpoints.md)
      border-radius: 12px
    +above($breakpoints.xxl)
      border-radius: 14px

  &__card-img-num
    position: absolute
    bottom: 0
    left: 0
    display: flex
    justify-content center
    align-items: center
    background-color $color-green
    width 35px
    height: 35px
    +above($breakpoints.sm)
      width 45px
      height: 45px
    +above($breakpoints.md)
      width 60px
      height: 60px
    +above($breakpoints.xxl)
      width 68px
      height: 68px

  &__card-img
    width 100%
    height: auto

  &__card-title
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 20px 0 12px
    +above($breakpoints.md)
      padding 24px 0 14px
    +above($breakpoints.xxl)
      padding 28px 0 16px

  &__bottom-title
    color: #fff
    text-align: center
    padding 0 0 10px
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0 15px
    +above($breakpoints.md)
      padding 50px 0 20px
    +above($breakpoints.xxl)
      padding 70px 0 22px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 552px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      width 676px
      gap: 8px
    +above($breakpoints.xxl)
      width 875px
      gap: 10px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 285px !important

  &__agree-wrapper
    display: flex
    align-items: center
    justify-content center
    margin-top 10px
    color: #C2C2C2
    +above($breakpoints.sm)
      justify-content start
      margin-top 20px

  &__icon
    position: absolute
    z-index -1
    width: 30px;
    height: auto;
    top: 7px;
    left: 98px;
    +above($breakpoints.sm)
      width: 50px;
      top: 28px;
      left: 55px;
    +above($breakpoints.md)
      width: 65px;
      top: 52px;
      left: 71px;
    +above($breakpoints.xxl)
      width 91px
      top: 85px
      left: 11px

  &__img
    width 280px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 390px;
      bottom: 50px;
      right: -160px;
    +above($breakpoints.md)
      width: 520px;
      bottom: 20px;
      right: -235px;
    +above($breakpoints.xxl)
      width 642px
      bottom: 25px
      right: -309px
