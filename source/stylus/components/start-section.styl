.start-section
  background-image: url('../images/start-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #556a4e
  position relative

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    color: $color-beige
    +above($breakpoints.sm)
      padding 40px 0 50px
    +above($breakpoints.md)
      padding 80px 0 90px
    +above($breakpoints.xxl)
      padding 122px 0 161px

  &__title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 60px 0
    +above($breakpoints.md)
      padding 0 0 80px 0
    +above($breakpoints.xxl)
      padding 0 0 107px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content space-between
      gap: 10px 200px
    +above($breakpoints.md)
      gap: 15px 300px
    +above($breakpoints.xxl)
      gap: 20px 580px

  &__card
    width 280px !important
    height: 96px
    border-radius: 8px
    background-color $color-brown
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      border-radius: 10px
      gap: 10px
      width: 200px !important;
      height: 98px;
    +above($breakpoints.md)
      border-radius: 12px
      gap: 15px
      width: 250px !important;
      height: 115px;
    +above($breakpoints.xxl)
      border-radius: 14px
      gap: 18px
      width 300px !important
      height: 134px

  &__card-icon
    width 18px
    height: 18px
    +above($breakpoints.sm)
      width 20px
      height: 20px
    +above($breakpoints.md)
      width 21px
      height: 21px
    +above($breakpoints.xxl)
      width 22px
      height: 22px

  &__bottom
    +above($breakpoints.sm)
      margin-top 50px
    +above($breakpoints.md)
      margin-top 80px
    +above($breakpoints.xxl)
      margin-top 120px

  &__bottom-text
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 18px 0 25px
    +above($breakpoints.xxl)
      padding 20px 0 27px

  &__btn
    width 280px !important
    margin 0 auto
    +above($breakpoints.sm)
      width 270px !important
    +above($breakpoints.md)
      width 290px !important
    +above($breakpoints.xxl)
      width 304px !important

  &__icon
    position: absolute
    z-index -1
    width: 26px;
    height: auto;
    top: 12px;
    left: 33px;
    +above($breakpoints.sm)
      width: 40px;
      top: 28px;
      left: 157px;
    +above($breakpoints.md)
      width: 50px;
      top: 72px;
      left: 210px;
    +above($breakpoints.xxl)
      width: 69px;
      top: 110px;
      left: 210px;

  &__img
    width 280px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 550px;
      top: 121px;
      left: 50%;
      transform: translateX(-49%);
    +above($breakpoints.md)
      width: 790px;
      top: 134px;
    +above($breakpoints.xxl)
      width 990px
      top: 201px
      transform: translateX(-49.5%);
