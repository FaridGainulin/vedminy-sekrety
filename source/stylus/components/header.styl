.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    +above($breakpoints.sm)
      padding 5px 0
    +above($breakpoints.md)
      padding 10px 0
    +above($breakpoints.xxl)
      padding 12px 0

  &__brand
    display: none
    +above($breakpoints.sm)
      flex-basis: 40%
      color: $color-black-text
      display: flex
      flex-direction: column
      gap: 4px

  &__logo
    width 74px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 140px
    +above($breakpoints.xxl)
      width 157px

  &__connection
    display: flex
    align-items: center
    justify-content flex-end
    gap: 6px
    color: #2D2D2D
    +above($breakpoints.sm)
      flex-basis: 40%
      gap: 8px;
    +above($breakpoints.md)
      gap: 10px;
    +above($breakpoints.xxl)
      gap: 13px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.md)
      width 13px
      height: 13px
    +above($breakpoints.xxl)
      width 14px
      height: 14px

