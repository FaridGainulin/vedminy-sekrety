.form-modal
  &__feedback
    position relative
    border-radius: 20px;
    color: #fff
    padding: 12px
    background: #3C284C
    box-shadow: 0px 2px 22px 0px #d3b1ed
    // border: 2px solid #F2CA30
    // &:before
    //   content: ''
    //   position: absolute
    //   top: -2px
    //   right: -2px
    //   bottom: -2px
    //   left: -2px
    //   z-index: -1
    //   border-radius: inherit
    //   background: linear-gradient(130deg, #f08427, #000, #000, #f08427);

  &__wrapper
    // border 1px solid #AD8E67
    padding 10px
    border-radius: 15px;
    +above($breakpoints.sm)
      padding 15px
    +above($breakpoints.xxl)
      padding: 20px

  &__info-title
    font-size: 12px;
    margin: 0 0 18px 0
    font-family: 'OrelegaOne-Regular'
    text-transform: uppercase
    font-weight: 400
    line-height 120%
    +above($breakpoints.sm)
      font-size: 14px
    +above($breakpoints.md)
      line-height 114%
      font-size: 16px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 20px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 45px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 50px
      margin-bottom: 15px
    +above($breakpoints.md)
      height: 55px
    +above($breakpoints.xxl)
      height: 60px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 20px
    .btn
      height: 45px
      font-size: 12px !important
      +above($breakpoints.sm)
        font-size: 14px !important
        height: 50px
      +above($breakpoints.md)
        font-size: 15px !important
        height: 55px
      +above($breakpoints.xxl)
        font-size: 16px !important
        height: 60px

  &__agree
    font-size: 9px;
    line-height: 13px;
    font-family: 'Inter-ExtraLight'
    position relative
    +above($breakpoints.sm)
      font-size: 10px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 10px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 12px;
      line-height: 15px;
    a
      text-decoration: underline
