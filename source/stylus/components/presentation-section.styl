.presentation-section
  // background-image: url('../images/presentation-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #F1F1F1

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 100px 0 111px 0

  &__title
    padding 0 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: end
      padding 0 0 20px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 60px 0

  &__card
    width 308px !important
    +above($breakpoints.sm)
      width 100% !important

  &__img
    width 100%
    height: auto
