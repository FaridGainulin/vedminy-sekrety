  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #FF8000
  &:focus
    color: #1E2019
    caret-color: #604278
    border 1px solid #FF8000
    box-shadow: 3px 3px 20px 0px #FF8000
    background: #fff
    &::placeholder
      color: #A5A5A5
  &::placeholder
    color: #A5A5A5
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 45px
  +above($breakpoints.md)
    padding: 0 17px;
    font-size: 16px;
    height: 50px
  +above($breakpoints.xxl)
    padding: 0 19px;
    font-size: 18px;
    height: 56px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    border: none
    padding: 10px 10px 10px 19px
    resize: none
    height: 60px
    width 280px
    border-radius: 10px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      width 220px
      height: 145px
    +above($breakpoints.md)
      border-radius: 15px
      padding: 17px 10px 10px 17px
      width 240px
      height: 166px;
    +above($breakpoints.xxl)
      border-radius: 20px
      padding: 19px 10px 10px 19px
      width 290px
      height: 188px

