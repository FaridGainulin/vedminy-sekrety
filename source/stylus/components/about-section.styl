.about-section
  &__out-wrapper
    background-image: url('../images/about-section-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color $color-violet

  &__container
    position relative
    z-index 1
    padding: 20px 0 5px;
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 120px 0

  &__box
    +above($breakpoints.sm)
      margin-left 310px
    +above($breakpoints.md)
      margin-left 415px
    +above($breakpoints.xxl)
      margin-left 520px

  &__title
    padding-bottom 15px
    position relative
    z-index 1
    +above($breakpoints.sm)
      padding-bottom 20px
    +above($breakpoints.md)
      padding-bottom 30px
    +above($breakpoints.xxl)
      padding-bottom 53px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-yellow
      border-radius: 52px
      width: 146px;
      height: 18px;
      top: 17px;
      left: 82px;
      +above($breakpoints.sm)
        width: 249px;
        height: 32px;
        top: 29px;
        left: -11px;
      +above($breakpoints.md)
        width: 342px;
        height: 43px;
        top: 39px;
        left: -16px;
      +above($breakpoints.xxl)
        width: 429px;
        height: 61px;
        top: 48px;
        left: -18px;

  &__sub-title,
  &__text,
  &__bottom-text
    +above($breakpoints.sm)
      letter-spacing: 1px

  &__sub-title
    width 100%
    padding: 10px 5px;
    background: linear-gradient(225deg, #fff 0%, #ececec 100%);
    color: $color-black-text
    margin-bottom 10px
    border-radius: 10px 10px 10px 0
    +above($breakpoints.sm)
      border-radius: 15px 15px 15px 0
      width 415px
      padding 20px 5px 20px 20px
      margin-bottom 20px
    +above($breakpoints.md)
      border-radius: 25px 25px 25px 0
      width 550px
      padding 25px 5px 25px 25px
      margin-bottom 30px
    +above($breakpoints.xxl)
      border-radius: 30px 30px 30px 0
      width 660px
      height: 170px
      padding 37px 5px 37px 44px
      margin-bottom 44px

  &__bottom-title
    padding 0 0 10px
    +above($breakpoints.sm)
      padding 0 0 15px
    +above($breakpoints.md)
      padding 0 0 18px
    +above($breakpoints.xxl)
      padding 0 0 20px

  &__bottom
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 10px
    margin-top 15px
    +above($breakpoints.sm)
      gap: 15px
      flex-direction: row
      align-items: flex-end
      margin-top 40px
    +above($breakpoints.md)
      gap: 65px
      margin-top 60px
    +above($breakpoints.xxl)
      gap: 71px
      margin-top 79px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px

  &__form-column
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    +above($breakpoints.sm)
      width 188px
    +above($breakpoints.md)
      width 230px
      gap: 8px
    +above($breakpoints.xxl)
      width 280px
      gap: 10px

  &__agree-wrapper
    display: flex
    align-items: center
    justify-content center
    margin-top 10px
    +above($breakpoints.sm)
      justify-content start

  &__bottom-text
    width 100%
    padding: 15px 6px;
    background-color #3C284C
    color: $color-yellow
    border-radius: 10px
    +above($breakpoints.sm)
      width: 296px;
      padding: 30px 5px 33px 20px;
      margin-bottom: 21px;
    +above($breakpoints.md)
      border-radius: 15px
      width: 422px;
      padding: 30px 5px 33px 30px;
      margin-bottom: 23px;
    +above($breakpoints.xxl)
      border-radius: 20px
      width 529px
      height: 188px
      padding 29px 5px 29px 52px
      margin-bottom 24px

  &__img
    width 280px
    height: auto
    margin 2px 0 0px 7px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 300px;
      top: 46px;
      left: -10px;
    +above($breakpoints.md)
      width: 420px;
      top: 40px;
      left: -23px;
    +above($breakpoints.xxl)
      width 572px
      top: 29px
      left: -99px

  &__icon-arrow
    position: absolute
    z-index -1
    width: 26px;
    height: auto;
    bottom: 649px;
    right: -26px;
    +above($breakpoints.sm)
      width: 34px;
      bottom: 252px;
      right: 0;
    +above($breakpoints.md)
      width: 50px;
      bottom: 296px;
    +above($breakpoints.xxl)
      width 55px
      bottom: 370px
      right: 6px
